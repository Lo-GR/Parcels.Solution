<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>Parcel Pal's</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
<div class="container">
  @using Parcels.Models;

  <h1>Parcels</h1>
  <ul>
    @if (Model.Count == 0)
    {
      <p>There are no parcels in the list.</p>
    }
    @foreach (Parcel parcel in Model)
    {
      <h1>@parcel.Description</h1>
      <h3>Dimensions</h3>
      <li>Width: @parcel.Width</li>
      <li>Height: @parcel.Height</li>
      <li>Length: @parcel.Length</li>
      <li>Weight: @parcel.Weight</li>
      <h3> Total Volume</h3>
      <li>@parcel.CalcVolume()</li>   
      <h3>Total Cost</h3>
      <li>@parcel.GetPrice()</li>    
    }
  </ul>
  <a href="/parcels/new">Add New Parcel</a>
  <a href='/parcels'>Refresh List of Parcels</a>
  </div>
</body>